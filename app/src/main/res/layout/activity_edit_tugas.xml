<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="-44dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_link_edit_tugas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:boxStrokeErrorColor="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/img_link_edit_tugas"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_link_edit_tugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:lines="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/img_link_edit_tugas"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_gambar_edit_tugas"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                app:srcCompat="@drawable/ic_link" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/sisipkan"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView63" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dropdown_kelas_edit_tugas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView35">

                <AutoCompleteTextView
                    android:id="@+id/tv_kelas_edit_tugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_edit_tugas_deskripsi"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView39">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_deskripsi_edit_tugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:lines="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/img_gambar_edit_tugas"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_kamera_edit_tugas"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                app:srcCompat="@drawable/ic_image" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/tanggal"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView55" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_tanggal_edit_tugas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="143dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:enabled="false"
                app:helperTextEnabled="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView56">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_tanggal_edit_tugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:enabled="true"
                    android:gravity="start"
                    android:lines="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    tools:text="dd/mm/yyyy" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/tenggat_waktu"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_edit_tugas_deskripsi" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_jam_edit_tugas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="143dp"
                android:layout_height="40dp"
                android:enabled="false"
                app:helperText="@string/helper_waktu"
                app:helperTextEnabled="true"
                app:layout_constraintEnd_toStartOf="@+id/btn_jam_edit_tugas"
                app:layout_constraintTop_toBottomOf="@+id/textView57">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_jam_edit_tugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:enabled="true"
                    android:gravity="start"
                    android:lines="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    tools:text="00.00" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/aspek"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dropdown_kelas_edit_tugas" />

            <View
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_back_edit_tugas"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view9"
                app:srcCompat="@drawable/ic_back" />

            <ImageView
                android:id="@+id/img_kamera_edit_tugas"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                app:srcCompat="@drawable/ic_camera_black" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/deskrpsi"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dropdown_edit_tugas_aspek" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dropdown_edit_tugas_aspek"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView38">

                <AutoCompleteTextView
                    android:id="@+id/tv_aspek_edit_tugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/btn_jam_edit_tugas"
                android:layout_width="21dp"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView57"
                app:srcCompat="@drawable/ic_jam" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/kelas"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view9" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="152dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/jam"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView55" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView58">

                <ImageView
                    android:id="@+id/img_edit_tugas"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:srcCompat="@drawable/banner_tugas" />

                <VideoView
                    android:id="@+id/vv_edit_tugas"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:foregroundGravity="center"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/btn_tutup_edit_tugas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_tutup_banner" />

            </FrameLayout>

            <Button
                android:id="@+id/btn_simpan_edit_tugas"
                android:layout_width="394dp"
                android:layout_height="52dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp"
                android:text="Simpan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_link_edit_tugas"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/btn_tanggal_edit_tugas"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@+id/input_tanggal_edit_tugas"
                app:layout_constraintTop_toBottomOf="@+id/textView56"
                app:srcCompat="@drawable/ic_kalender" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="59dp"
                android:fontFamily="@font/roboto"
                android:text="@string/helper_waktu"
                android:textColor="@color/colorBlack"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_jam_edit_tugas" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto"
                android:text="@string/helper_tanggal"
                android:textColor="@color/colorBlack"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_tanggal_edit_tugas" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>